<pipeline xmlns="http://labkey.org/pipeline/xml"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="r-copy-localtask" version="0.0">
    <description>Use R to duplicate a file (localtask)</description>
    <tasks>
        <task xsi:type="ScriptTaskType">
            <inputs>
                <file name="input.txt"/>
                <integer name="skip-lines" default="0"/>
            </inputs>
            <script file="pipeline/tasks/r-copy.r"/>
        </task>
        <task xsi:type="AssayImportRunTaskType" >
            <inputs>
                <file name="input.csv"/>
            </inputs>
            <providerName>General</providerName>
            <!--<protocolName>${protocolName}</protocolName>-->
            <protocolName>myassay</protocolName>
        </task>
    </tasks>

</pipeline>

