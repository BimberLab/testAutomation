<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Truncate Test</name>
    <description>append rows from etl_source to etl_target; truncate before appending to etl_target2</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target</description>
            <source schemaName="vehicle" queryName="etl_source" timestampcolumnname="modified" />
            <destination schemaName="vehicle" queryName="etl_target" targetOption="truncate"/>
        </transform>
        <transform id="step2" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target two</description>
            <source schemaName="vehicle" queryName="etl_source" timestampcolumnname="modified" />
            <destination schemaName="vehicle" queryName="etl_target2" targetOption="truncate"/>
        </transform>
    </transforms>
    <incrementalFilter className="ModifiedSinceFilterStrategy" timestampColumnName="modified" />
    <schedule>
    </schedule>
</etl>
